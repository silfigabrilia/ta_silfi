<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink"
    tools:context=".Gizi">

    <androidx.appcompat.widget.Toolbar
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maroon">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_kembali"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/toolbar_vitamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:text="Gizi"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/gizi"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tvdefinisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/tvketerangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"/>

            //button zat gizi
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <Button
                android:id="@+id/btn_karbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_below="@id/tvketerangan"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Karbohidrat"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btn_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_below="@id/btn_karbo"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Protein"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btn_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_below="@id/btn_pro"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Lemak"
                android:textColor="#FFFFFF"/>

    //status gizi
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tvdefinisi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:text="Tingkat Gizi"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/tvketerangan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="abc"
                android:textSize="20sp"/>

            //button status gizi
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <Button
                android:id="@+id/btn_gz1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_below="@id/tvketerangan2"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Gizi Kurang"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btn_gz2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_below="@id/btn_gz1"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Gizi Cukup"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btn_gz3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_below="@id/btn_gz2"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Gizi Lebih"
                android:textColor="#FFFFFF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
        </LinearLayout>

    </ScrollView>



</LinearLayout>